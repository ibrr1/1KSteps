<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.zoonapps.stepscountapp.RegistrationActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:id="@+id/usernameET"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:id="@+id/passwordET"
        android:hint="Password"
        android:layout_below="@+id/usernameET"
        android:layout_alignStart="@+id/usernameET" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:id="@+id/emailET"
        android:hint="Email"
        android:layout_below="@+id/passwordET"
        android:layout_alignStart="@+id/passwordET" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textSize="17sp"
        android:layout_below="@+id/emailET"
        android:layout_marginTop="15dp"
        android:id="@+id/ageET"
        android:hint="Age"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/passwordET" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textSize="17sp"
        android:layout_below="@+id/ageET"
        android:layout_marginTop="15dp"
        android:id="@+id/phoneNumberET"
        android:hint="Phone Number"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/passwordET" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/registerBtn"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:layout_below="@+id/phoneNumberET"
        android:layout_alignStart="@+id/phoneNumberET"
        android:layout_alignEnd="@+id/phoneNumberET" />

    <TextView
        android:text="Have an account? Login now!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/registerBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/loginTV" />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/progressBar" />


</RelativeLayout>
